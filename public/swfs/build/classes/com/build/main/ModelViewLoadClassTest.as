package com.build.main {	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.display.Loader;	import flash.display.LoaderInfo;	import flash.display.Shape;	import flash.events.Event;	import flash.net.URLRequest;	import flash.geom.ColorTransform;	import flash.geom.Transform;		public class ModelViewLoadClassTest extends Sprite {		private var _bg:Shape = new Shape();		private var _viewURL:String = new String();		public var _viewLoader:Loader = new Loader();		private var _colorInfo:ColorTransform = new ColorTransform();				public function ModelViewLoadClassTest() {			init();		}				private function init():void {			_bg.graphics.beginFill(0xFFFFFF, 1);			_bg.graphics.drawRect(0, 0, 775, 448);			_bg.graphics.endFill();			addChild(_bg);						_viewURL = "rz4/front3quarter.swf";			var viewRequest:URLRequest = new URLRequest(_viewURL); 			_viewLoader.load(viewRequest);			_viewLoader.name = "theView";						addChild(_viewLoader);			_viewLoader.addEventListener(Event.ADDED_TO_STAGE, viewLoaderAdded);			function viewLoaderAdded(event:Event):void {				_viewLoader.contentLoaderInfo.addEventListener(Event.COMPLETE, viewLoaderComplete);				_viewLoader.removeEventListener(Event.ADDED_TO_STAGE, viewLoaderAdded);			}		}				private function viewLoaderComplete(event:Event):void {			colorSwitch(MovieClip(_viewLoader.content.root).deckMC.deckBgMC, 0xEAEEF1);			_viewLoader.contentLoaderInfo.removeEventListener(Event.COMPLETE, viewLoaderComplete);		}				public function colorSwitch(theMC:MovieClip, theColor:Number):void {			var _colorInfo:ColorTransform = theMC.transform.colorTransform;			_colorInfo.color = theColor;			theMC.transform.colorTransform = _colorInfo;		}	}}